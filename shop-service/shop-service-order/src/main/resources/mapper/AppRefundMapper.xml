<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.markerhub.order.mapper.AppRefundMapper">

    <select id="pageWithUsername" resultType="com.markerhub.order.entity.AppRefund">
        select r.*, u.username, u.avatar as userAvatar
        from app_refund r
        left join app_user u on r.user_id = u.id
        ${ew.customSqlSegment}

    </select>
</mapper>
